<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= project.title %> | Project Details</title>
  <link href="/main.css" rel="stylesheet">
</head>
<body>

  <!-- Navbar -->
  <%- include('partials/navbar', { page: "" }) %>

  <!-- Header -->
  <section class="hero bg-base-200 py-10">
    <div class="text-center">
      <h1 class="text-4xl font-bold"><%= project.title %></h1>
      
      <!-- Display Sector if it exists -->
      <% if (project.Sector) { %>
        <p class="text-lg mt-2 text-gray-600">
          Sector: <strong><%= project.Sector.sector_name %></strong>
        </p>
      <% } else { %>
        <p class="text-lg mt-2 text-gray-600"><em>Sector: Unknown</em></p>
      <% } %>

      <p class="py-4">
        Below, you will find detailed information about the project:
        <strong><%= project.title %></strong>
      </p>
    </div>
  </section>

  <!-- Project Details -->
  <section class="p-6 space-y-6 max-w-4xl mx-auto">
    <!-- Project Image -->
    <img
      src="<%= project.feature_img_url %>"
      alt="<%= project.title %> Image"
      class="w-full h-auto rounded-xl shadow-xl"
    />

    <!-- Description -->
    <div class="space-y-2">
      <p><strong>Introduction:</strong> <%= project.intro_short %></p>
      <p><strong>Impact:</strong> <%= project.impact %></p>
      <p>
        <a
          class="link link-primary"
          href="<%= project.original_source_url %>"
          target="_blank"
        >
          More Info
        </a>
      </p>
    </div>

    <!-- Back / Edit / Delete Buttons -->
    <div class="text-center space-x-4 mt-8">
      <a href="#" onclick="history.back(); return false;" class="btn btn-outline">Back</a>

      <!-- Optional: Edit & Delete buttons -->
      <a href="/solutions/editProject/<%= project.id %>" class="btn btn-success">Edit</a>
      <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error">Delete</a>
    </div>
  </section>

</body>
</html>
