<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Project</title>
  <link href="/main.css" rel="stylesheet">
</head>
<body>

  <%- include('partials/navbar', { page: "/solutions/addProject" }) %>

  <section class="hero bg-base-200 py-10">
    <div class="text-center">
      <h1 class="text-4xl font-bold">Add Project</h1>
    </div>
  </section>

  <section class="p-6 max-w-3xl mx-auto space-y-6">
    <form method="POST" action="/solutions/addProject" class="space-y-4">
      <div>
        <label class="label">Title</label>
        <input type="text" name="title" class="input input-bordered w-full" required>
      </div>

      <div>
        <label class="label">Feature Image URL</label>
        <input type="url" name="feature_img_url" class="input input-bordered w-full" required>
      </div>

      <div>
        <label class="label">Sector</label>
        <select name="sector_id" class="select select-bordered w-full" required>
          <% sectors.forEach(sector => { %>
            <option value="<%= sector.id %>"><%= sector.sector_name %></option>
          <% }) %>
        </select>
      </div>

      <div>
        <label class="label">Introduction</label>
        <textarea name="intro_short" class="textarea textarea-bordered w-full" required></textarea>
      </div>

      <div>
        <label class="label">Summary</label>
        <textarea name="summary_short" class="textarea textarea-bordered w-full" required></textarea>
      </div>

      <div>
        <label class="label">Impact</label>
        <textarea name="impact" class="textarea textarea-bordered w-full" required></textarea>
      </div>

      <div>
        <label class="label">Original Source URL</label>
        <input type="url" name="original_source_url" class="input input-bordered w-full" required>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary mt-4">Add Project</button>
      </div>
    </form>
  </section>

</body>
</html>
